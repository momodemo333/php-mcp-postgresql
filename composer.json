{
    "name": "momodemo333/php-mcp-mysql",
    "description": "MySQL MCP Server for Claude Code - Secure and configurable MySQL integration via Model Context Protocol",
    "type": "library",
    "keywords": ["mcp", "mysql", "claude-code", "ai", "database", "model-context-protocol", "php-mcp"],
    "homepage": "https://github.com/momodemo333/php-mcp-mysql",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/momodemo333/php-mcp-mysql/issues",
        "source": "https://github.com/momodemo333/php-mcp-mysql"
    },
    "authors": [
        {
            "name": "momodemo333",
            "homepage": "https://github.com/momodemo333"
        }
    ],
    "require": {
        "php": ">=8.1",
        "php-mcp/server": "^3.3",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "MySqlMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MySqlMcp\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "bin": [
        "bin/server.php",
        "bin/server-cli.php",
        "bin/server-wrapper.php"
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "post-install-cmd": [
            "@php -r \"echo '\\nğŸ‰ PHP MCP MySQL Server installed successfully!\\n';\"",
            "@php -r \"echo 'ğŸ“– Documentation: https://github.com/momodemo333/php-mcp-mysql#readme\\n';\"",
            "@php -r \"echo 'ğŸš€ Server: vendor/momodemo333/php-mcp-mysql/bin/server.php\\n';\"",
            "@php -r \"echo 'ğŸ™ Thanks to php-mcp/server for the MCP framework\\n\\n';\""
        ]
    }
}