{
    "name": "momodemo333/php-mcp-postgresql",
    "description": "PostgreSQL MCP Server for Claude Code - Secure and configurable PostgreSQL integration via Model Context Protocol",
    "type": "library",
    "keywords": ["mcp", "postgresql", "postgres", "pgsql", "claude-code", "ai", "database", "model-context-protocol", "php-mcp"],
    "homepage": "https://github.com/momodemo333/php-mcp-postgresql",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/momodemo333/php-mcp-postgresql/issues",
        "source": "https://github.com/momodemo333/php-mcp-postgresql"
    },
    "authors": [
        {
            "name": "momodemo333",
            "homepage": "https://github.com/momodemo333"
        }
    ],
    "require": {
        "php": ">=8.1",
        "php-mcp/server": "^3.3",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5|^10.0",
        "symfony/process": "^6.0",
        "symfony/finder": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "PostgreSqlMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PostgreSqlMcp\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "bin": [
        "bin/server.php",
        "bin/server-cli.php",
        "bin/server-wrapper.php"
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "test:docker": "@php tests/scripts/run-docker-tests.php",
        "phpunit": "phpunit",
        "phpunit:coverage": "phpunit --coverage-html coverage",
        "post-install-cmd": [
            "@php -r \"echo '\\n🎉 PHP MCP PostgreSQL Server installed successfully!\\n';\"",
            "@php -r \"echo '📖 Documentation: https://github.com/momodemo333/php-mcp-postgresql#readme\\n';\"",
            "@php -r \"echo '🚀 Server: vendor/momodemo333/php-mcp-postgresql/bin/server.php\\n';\"",
            "@php -r \"echo '🙏 Thanks to php-mcp/server for the MCP framework\\n\\n';\""
        ]
    }
}