{
    "name": "momodemo333/php-mcp-postgresql",
    "description": "PostgreSQL MCP Server for Claude Code - Secure and configurable PostgreSQL integration via Model Context Protocol",
    "version": "1.0.0-beta",
    "type": "library",
    "keywords": ["mcp", "postgresql", "postgres", "pgsql", "claude-code", "ai", "database", "model-context-protocol", "php-mcp"],
    "homepage": "https://github.com/momodemo333/php-mcp-postgresql",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/momodemo333/php-mcp-postgresql/issues",
        "source": "https://github.com/momodemo333/php-mcp-postgresql"
    },
    "authors": [
        {
            "name": "momodemo333",
            "homepage": "https://github.com/momodemo333"
        }
    ],
    "require": {
        "php": ">=8.1",
        "php-mcp/server": "^3.3",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
    },
    "autoload": {
        "psr-4": {
            "PostgreSqlMcp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PostgreSqlMcp\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "bin": [
        "bin/server.php",
        "bin/server-cli.php",
        "bin/server-wrapper.php"
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "scripts": {
        "test": "@php tests/test_connection.php && @php tests/test_mcp_server.php",
        "test:connection": "@php tests/test_connection.php",
        "test:mcp": "@php tests/test_mcp_server.php",
        "test:docker": "./tests/run-tests.sh",
        "post-install-cmd": [
            "@php -r \"echo '\\nüéâ PHP MCP PostgreSQL Server installed successfully!\\n';\"",
            "@php -r \"echo 'üìñ Documentation: https://github.com/momodemo333/php-mcp-postgresql#readme\\n';\"",
            "@php -r \"echo 'üöÄ Server: vendor/momodemo333/php-mcp-postgresql/bin/server.php\\n';\"",
            "@php -r \"echo 'üôè Thanks to php-mcp/server for the MCP framework\\n\\n';\""
        ]
    }
}