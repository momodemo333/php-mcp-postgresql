{
  "mcpServers": {
    "pg-development": {
      "command": "php",
      "args": ["/path/to/php-mcp-postgresql/bin/server.php"],
      "type": "stdio",
      "env": {
        "PGSQL_HOST": "dev.example.com",
        "PGSQL_PORT": "5432",
        "PGSQL_USER": "dev_user",
        "PGSQL_PASS": "dev_password",
        "PGSQL_DB": "development",
        "ALLOW_INSERT_OPERATION": "true",
        "ALLOW_UPDATE_OPERATION": "true",
        "ALLOW_DELETE_OPERATION": "true",
        "LOG_LEVEL": "DEBUG"
      }
    },
    "pg-production": {
      "command": "php",
      "args": ["/path/to/php-mcp-postgresql/bin/server.php"],
      "type": "stdio",
      "env": {
        "PGSQL_HOST": "prod.example.com",
        "PGSQL_PORT": "5432",
        "PGSQL_USER": "readonly_user",
        "PGSQL_PASS": "readonly_password",
        "PGSQL_DB": "production",
        "ALLOW_INSERT_OPERATION": "false",
        "ALLOW_UPDATE_OPERATION": "false",
        "ALLOW_DELETE_OPERATION": "false",
        "MAX_RESULTS": "100",
        "QUERY_TIMEOUT": "10",
        "LOG_LEVEL": "ERROR"
      }
    },
    "pg-analytics": {
      "command": "php",
      "args": ["/path/to/php-mcp-postgresql/bin/server.php"],
      "type": "stdio",
      "env": {
        "PGSQL_HOST": "analytics.example.com",
        "PGSQL_PORT": "5432",
        "PGSQL_USER": "analyst",
        "PGSQL_PASS": "analyst_password",
        "PGSQL_DB": "analytics",
        "ALLOW_INSERT_OPERATION": "false",
        "ALLOW_UPDATE_OPERATION": "false",
        "ALLOW_DELETE_OPERATION": "false",
        "MAX_RESULTS": "10000",
        "QUERY_TIMEOUT": "60",
        "LOG_LEVEL": "WARN"
      }
    }
  }
}