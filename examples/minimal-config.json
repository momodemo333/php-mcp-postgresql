{
    "mcpServers": {
        "postgresql": {
            "type": "stdio",
            "command": "php",
            "args": ["vendor/momodemo333/php-mcp-postgresql/bin/server.php"],
            "env": {
                "PGSQL_HOST": "127.0.0.1",
                "PGSQL_PORT": "5432",
                "PGSQL_USER": "postgres",
                "PGSQL_PASS": "password",
                "PGSQL_DB": "myapp",
                "ALLOW_INSERT_OPERATION": "true",
                "ALLOW_UPDATE_OPERATION": "true",
                "ALLOW_DELETE_OPERATION": "false"
            }
        }
    }
}