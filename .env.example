# PostgreSQL MCP Server Configuration
# Copy to .env and adjust values for your environment

# === CONNEXION POSTGRESQL ===
PGSQL_HOST=localhost
PGSQL_PORT=5432
PGSQL_USER=postgres
PGSQL_PASS=your_password
PGSQL_DB=                          # Leave empty for multi-DB mode

# === PERMISSIONS CRUD ===
ALLOW_INSERT_OPERATION=false
ALLOW_UPDATE_OPERATION=false
ALLOW_DELETE_OPERATION=false
ALLOW_TRUNCATE_OPERATION=false

# === PERMISSIONS DDL (Schema) ===
ALLOW_DDL_OPERATIONS=false          # CREATE, ALTER, DROP tables/indexes
ALLOW_ALL_OPERATIONS=false          # Super admin mode - allows ALL operations

# === SÉCURITÉ ===
QUERY_TIMEOUT=30
MAX_RESULTS=1000
ALLOWED_SCHEMAS=                   # Comma-separated list, empty = all allowed
BLOCK_DANGEROUS_KEYWORDS=true

# === PERFORMANCE ===
CONNECTION_POOL_SIZE=5
ENABLE_PREPARED_STATEMENTS=true

# === LOGGING ===
LOG_LEVEL=INFO                     # DEBUG, INFO, WARN, ERROR